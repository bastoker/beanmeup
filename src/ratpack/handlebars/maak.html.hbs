{{> _header.html}}

    <section class="header">
        <div class="row">
            <div class="ten columns">
                <h2>Maak je presentatie</h2>
            </div>
        </div>
    </section>

    <form action="/maak" method="post">
        <div class="row">
            <div class="six columns">
                <label for="nameInput">Naam presentatie</label>
                <input class="u-full-width" type="text" placeholder="Dienst a.s. zondag" id="nameInput">
            </div>
            <div class="six columns">
                <label for="scriptInput">Opties</label>
                <label>
                    <input type="checkbox" checked="y">
                    <span class="label-body">Begin de presentatie met een lege slide</span>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="six columns">
                <label for="scriptInput">Script</label>
                <textarea class="script-input u-full-width" rows="12" id="scriptInput">{{script}}</textarea>
            </div>
        </div>
        <input class="button-primary" type="submit" value="Maak presentatie"/>
        <p>&nbsp;</p>
        <hr/>
    </form>

{{> _footer.html}}
